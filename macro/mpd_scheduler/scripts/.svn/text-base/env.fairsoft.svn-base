#!/bin/bash
export SIMPATH=/opt/fairsoft/install
export ROOTSYS=$SIMPATH

export PATH=$SIMPATH/bin:$SIMPATH/../xrootd/bin:$PATH

if [ -z "${LD_LIBRARY_PATH}" ]; then
export LD_LIBRARY_PATH=$SIMPATH/lib:$SIMPATH/lib/root:$SIMPATH/../xrootd/lib64
else
export LD_LIBRARY_PATH=$SIMPATH/lib:$SIMPATH/lib/root:$SIMPATH/../xrootd/lib64:$LD_LIBRARY_PATH
fi

source $SIMPATH/bin/geant4.sh

export MANPATH=$MANPATH:$SIMPATH/man:$SIMPATH/share/man:$SIMPATH/../xrootd/share/man
